<h3 class="ui header">{{t "forms.i-i-s-proba9-регист-анкеты-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proba9-регист-анкеты-e.датаРегистр-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаРегистр
      class=(if (v-get validationModel "датаРегистр" "isInvalid") "error")
      data-test-i-i-s-proba9-регист-анкеты-e-датаРегистр=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаРегистр" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proba9-регист-анкеты-e.организация-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.организация
      displayAttributeName="наименование"
      autocomplete=true
      relationName="организация"
      projection="ОрганизацияL"
      title=(t "forms.i-i-s-proba9-регист-анкеты-e.организация-caption")
      readonly=readonly
      componentName="организацияLookup"
      class=(if (v-get validationModel "организация" "isInvalid") "error")
      data-test-i-i-s-proba9-регист-анкеты-e-организация=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "организация" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proba9-регист-анкеты-e.тЧРегистАнкеты-caption"}}</label>
    {{flexberry-groupedit
      componentName="тЧРегистАнкетыGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.тЧРегистАнкеты
      content=model.тЧРегистАнкеты
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "тЧРегистАнкеты" "isInvalid") "error")
      data-test-i-i-s-proba9-регист-анкеты-e-тЧРегистАнкеты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тЧРегистАнкеты" "message")}}
  </div>
</form>
